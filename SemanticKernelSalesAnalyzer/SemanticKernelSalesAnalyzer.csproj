<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>SemanticKernelSalesAnalyzer</AssemblyName>
    <RootNamespace>SemanticKernelSalesAnalyzer</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SemanticKernel" Version="1.67.1" />
    <PackageReference Include="CsvHelper" Version="33.0.1" />
    <PackageReference Include="ScottPlot" Version="5.0.36" />
  </ItemGroup>

  <ItemGroup>
    <None Include="sales.csv">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
